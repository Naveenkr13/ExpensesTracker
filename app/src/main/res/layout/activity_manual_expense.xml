<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/main"
        android:background="#F4F5F7">

        <!-- Big Title -->
        <TextView
            android:id="@+id/titleMain"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Expense"
            android:textSize="@dimen/_26sdp"
            android:textStyle="bold"
            android:textColor="#222"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_105sdp" />

        <!-- Premium Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_24sdp"
            app:cardCornerRadius="@dimen/_24sdp"
            app:cardElevation="10dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/titleMain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Expense Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expense Title"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F7F7F7"
                    app:boxCornerRadiusTopStart="@dimen/_14sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_14sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_14sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_14sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:hint="Category"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F7F7F7"
                    app:boxCornerRadiusTopStart="@dimen/_14sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_14sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_14sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_14sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtca"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:hint="Amount (â‚¹)"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F7F7F7"
                    app:boxCornerRadiusTopStart="@dimen/_14sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_14sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_14sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_14sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ednum"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date with Icon -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:hint="Select Date"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/calender"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F7F7F7"
                    app:boxCornerRadiusTopStart="@dimen/_14sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_14sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_14sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_14sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/eddate"
                        android:focusable="false"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save Expense"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="24dp"
            app:cornerRadius="18dp"
            android:backgroundTint="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/cardExpense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
